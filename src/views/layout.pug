doctype html
html
  head
    title= title
    style.
      body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; margin: 0; padding: 20px; background-color: #f4f7f6; }
      .container { max-width: 800px; margin: auto; background: #fff; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); }
      h1 { color: #333; }
      table { width: 100%; border-collapse: collapse; margin-top: 20px; }
      th, td { padding: 12px; text-align: left; border-bottom: 1px solid #ddd; }
      th { background-color: #007bff; color: white; }
      .btn { padding: 8px 15px; text-decoration: none; border-radius: 4px; display: inline-block; cursor: pointer; border: none; }
      .btn-primary { background-color: #007bff; color: white; }
      .btn-danger { background-color: #dc3545; color: white; }
      .btn-warning { background-color: #ffc107; color: #333; }
      .form-group { margin-bottom: 15px; }
      label { display: block; margin-bottom: 5px; font-weight: bold; }
      input { width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px; }
      .error { color: #dc3545; margin-bottom: 10px; }
      .nav { margin-bottom: 20px; }
  body
    .container
      .nav
        a.btn.btn-primary(href="/") Home
        |  
        a.btn.btn-primary(href="/create") Add Student
      block content
